<Window x:Class="Personal_Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Task_Manager"
        mc:Ignorable="d"
        Title="Personal Task Manager" Height="366.167" Width="525" Foreground="Black" MinHeight="320" MinWidth="530">
    
    <Grid Margin="0,0,0,17">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TabControl HorizontalAlignment="Stretch" Margin="1,-2,0,-148" VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5" >
            <TabControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.585"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.511"/>
                </TransformGroup>
            </TabControl.RenderTransform>
            <TabItem Header="Dashboard">
                <Grid Background="White" Margin="-7,-1,-17,-1" MinHeight="310" MinWidth="535">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="18*"/>
                        <ColumnDefinition Width="31*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Create Task" HorizontalAlignment="Left" Margin="146,278,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Column="1" FontWeight="Bold"/>
                    <Button Content="Create Group" HorizontalAlignment="Left" Margin="226,278,0,0" VerticalAlignment="Top" Width="84" Grid.Column="1" FontWeight="Bold"/>
                    <GroupBox Header="General Information" Background="White" HorizontalAlignment="Left" Height="184" Margin="15,-2,0,0" VerticalAlignment="Top" Width="243" FontWeight="Bold" Grid.ColumnSpan="2">
                        <DataGrid Background="White">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Time" Width="*" IsReadOnly="True" />
                                <DataGridTextColumn Header="Daily Tasks" Width="*" IsReadOnly="True" />
                                <DataGridTextColumn Header="Total Tasks" Width="*" IsReadOnly="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox Header="31 JAN 18" Background="White" HorizontalAlignment="Left" Height="184" Margin="70,-2,0,0" VerticalAlignment="Top" Width="240" FontWeight="Bold" Grid.Column="1"/>
                    <Calendar HorizontalAlignment="Left" Margin="60,11,0,0" VerticalAlignment="Top" Width="250" Height="168" Grid.Column="1"/>
                    <GroupBox Header="Current Tasks" Background="White" HorizontalAlignment="Left" Height="94" Margin="14,178,0,0" VerticalAlignment="Top" Width="494" FontWeight="Bold" Grid.ColumnSpan="2">
                        <DataGrid Background="White" FontSize="10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Task No" Width="*"/>
                                <DataGridTextColumn Header="Due Date" Width="*"/>
                                <DataGridTextColumn Header="Name" Width="2*"></DataGridTextColumn>
                                <DataGridTextColumn Header="Description" Width="2*"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
