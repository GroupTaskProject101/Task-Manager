<Window x:Class="Personal_Task_Manager.MultipleTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Task_Manager"
        mc:Ignorable="d"
        Title="MultipleTaskWindow" Height="500" Width="500">
    <Grid>
        <DataGrid Name="dataGrid"
                  AlternatingRowBackground="LightBlue"
                  AlternationCount="2"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Group"
                                    Binding="{Binding Group}"/>
                <DataGridTextColumn Header="Due" 
                                    Width="Auto"
                                    Binding="{Binding EndDate, StringFormat='d/M HH:MM tt'}"/>
                <DataGridTextColumn Header="Description"
                                    Binding="{Binding Description}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
